alias gfbi='gradle format && gradle build && gradle install'

alias gf='gradle format -b build_gradle.gradle && gradle build -b build_gradle.gradle && gradle install -b build_gradle.gradle'

alias brcgf='brc "gradle format -b build_gradle.gradle && gradle build -b build_gradle.gradle && gradle install -b build_gradle.gradle"'


alias gwb='./gradlew build'
alias gwr='./gradlew run'
alias gwf='./gradlew ktlintFormat'

alias gw='gradle wrapper'

alias gwrd='./gradlew assemble --refresh-dependencies'


alias gwal='for d in ./*/ ; do (cd "$d" && pwd && gradle wrapper);done'
alias gwbal='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew build);done'
alias gwral='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew run);done'
alias gwfal='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew ktlintFormat);done'
alias gwrdal='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew assemble --refresh-dependencies);done'