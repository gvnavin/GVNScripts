alias gfbi='gradle format && gradle build && gradle install; say done'

alias gf='gradle format -b build_gradle.gradle && gradle build -b build_gradle.gradle && gradle install -b build_gradle.gradle; say done'

alias brcgf='brc "gradle format -b build_gradle.gradle && gradle build -b build_gradle.gradle && gradle install -b build_gradle.gradle"; say done'

alias gwfb='./gradlew ktlintFormat && ./gradlew build; say done'
alias gwb='./gradlew build; say done'
alias gwr='./gradlew run; say done'
alias gwf='./gradlew ktlintFormat; say done'
alias gwp='./gradlew publish; say done'

alias gw='gradle wrapper; say done'

alias gwrd='./gradlew assemble --refresh-dependencies; say done'


alias gwal='for d in ./*/ ; do (cd "$d" && pwd && gradle wrapper);done; say done'
alias gwbal='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew ktlintFormat && ./gradlew build);done ; say done'
alias gwral='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew run);done ; say done'
alias gwfal='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew ktlintFormat);done ; say done'
alias gwrdal='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew assemble --refresh-dependencies);done ; say done'

alias gwpal='for d in ./*/ ; do (cd "$d" && pwd && ./gradlew publish);done ; say done'
