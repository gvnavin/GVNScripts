###########################################################################
#git

alias gg='git gui &'
alias gk='gitk'
alias gst='git status'
alias gsh='git show'
alias gd='git diff'
alias gdc='git diff --cached'

#git log
alias gl='git log'
alias glo='git log --pretty=oneline'
alias gl5='git log --pretty=oneline -5'

function gln {
	git log --pretty=oneline -$1
}

alias glp='git log -p'
alias gls='git log --stat'

alias gbl='git blame'

#git rebase
alias grc='git rebase --continue'
alias gplr='git pull --rebase'

function gri {
	git rebase -i HEAD~$1
}

alias agplr='/apollo/env/SDETools/bin/git pull --rebase'


alias grh='git reset HEAD~1'

function grhn {
	git reset HEAD~$1
}

alias grhH='git reset --hard HEAD'

alias gcfdx='git clean -fdx'

#https://stackoverflow.com/questions/61212/how-to-remove-local-untracked-files-from-the-current-git-working-tree
alias gcfd='git clean -f -d'

alias gcm='git commit -m'
alias gcmt='git commit -m "temp"'
alias gca='git commit --amend'
alias gcane='git commit --amend --no-edit'

alias gcp='git cherry-pick'
alias gcpc='git cherry-pick --continue'

###########################################################################

alias gph='git push'

#git push origin branch-name
alias gpo='git push origin'

#git push to mainline
alias gpml='git push origin mainline'

alias gppt='git push origin prototype'

alias gpmt='git push origin master'

#to push into new branch
#git push --set-upstream origin new_branch
alias gpu='git push --set-upstream origin'

alias gpumt='git push --set-upstream origin master'

###########################################################################

alias gcod='git checkout development'
alias gcol='git checkout ll'


#if you give branch it will check the given branch or if you give commit id, it will sync upto the given commit id
alias gco='git checkout'
alias gcom='git checkout main'
alias gcoml='git checkout mainline'
alias gcomt='git checkout master'

alias ga.='git add .'	# stages new and modified, without deleted
alias gau='git add -u'	# u = update - stages modified and deleted, without new
alias gaa='git add -A'  # stages All
alias gap='git add -p'  # patch, stage change interactively
alias gad='git add'

#creates a new branch
alias gcob='git checkout -b'

#create a new branch from mainline as base
function gcobm {
	git checkout -b $1 mainline
}

#deletes branch
alias gbd='git branch -d'
alias gbD='git branch -D'

#https://stackoverflow.com/questions/2003505/how-do-i-delete-a-git-branch-both-locally-and-remotely
#git push origin --delete <remote branch>

#show the branches checked out/present in the dev desktop 
alias gb='git branch'

#shows all the branch including the branches from server
alias gba='git branch -a'

#rename branch oldBranch newBranch
alias gbm='git branch -m'

git config --global core.editor "subl -w"

function gacmt {
	ga.; 
	gcmt;
	spd-say done
}

function gacmtr {
	ga.; 
	gcmt;
	git rebase -i HEAD~$1;
	spd-say done
}

alias gii='gi osx > .gitignore; gi java >> .gitignore; gi intellij >> .gitignore'

################################################################


alias gsth='git stash; spd-say done'
alias gstha='git stash apply; spd-say done'
alias gsthp='git stash pop; spd-say done'

alias grv='git remote -v; spd-say done'

function gacpt {
	ga.;
	gcmt;
	gph
	spd-say done
}

function gacp {
	./gradlew ktlintFormat && spd-say "ktlintFormat done" && ./gradlew build; spd-say "build done"
	ga.;
	gcm "$1";
	gph
	spd-say "gacp done"
}

alias gmag='git merge origin/ag --allow-unrelated-histories; spd-say done'

alias gmagal='for d in ./*/ ; do (cd "$d" && pwd && git merge origin/ag --allow-unrelated-histories);done; spd-say done'

alias gplral='for d in ./*/ ; do (cd "$d" && pwd && git pull --rebase);done; spd-say done'

alias gcal='for d in ./*/ ; do (cd "$d" && pwd && git commit);done; spd-say done'

alias gstal='for d in ./*/ ; do (cd "$d" && pwd && git status);done; spd-say done'

alias gacmtal='for d in ./*/ ; do (cd "$d" && pwd && git add . && git commit -m "temp commit" );done; spd-say done'

alias gacmal='for d in ./*/ ; do (cd "$d" && pwd && git add . && git commit );done; spd-say done'

alias gphal='for d in ./*/ ; do (cd "$d" && pwd && git push);done; spd-say done'

alias gsthal='for d in ./*/ ; do (cd "$d" && pwd && git stash);done; spd-say done'

alias gsthpal='for d in ./*/ ; do (cd "$d" && pwd && git stash pop);done; spd-say done'

alias grhHal='for d in ./*/ ; do (cd "$d" && pwd && git reset --hard HEAD);done; spd-say done'


function m2pp {
	gco master
	git pull --rebase
	npm run init
	gco release/pre-prod
	git pull --rebase
	git merge --ff-only master
	git push
	spd-say done
}

function m2p {
	gco release/prod
	git pull --rebase
	git merge --ff-only release/pre-prod
	git push
	gcomt

	spd-say done

}


function m2dp {
	gco master
	git pull --rebase
	npm run init

	gco release/pre-prod
	git pull --rebase
	git merge --ff-only master
	git push

	gco release/prod
	git pull --rebase
	git merge --ff-only release/pre-prod
	git push
	
	gcomt
	
	spd-say done

}